<h1>Posts</h1>

<table>
  <tr>
    <th>S no.</th>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% @posts.each_with_index do |post, index| %>
	  <tr>
	    <td><%= index + 1 %></td>
	    <td><%= post.title %></td>
	    <td><%= post.description %></td>
	    <td><%= link_to "edit", edit_post_path(post) %></td>
	    <td><%= link_to "delete", post_path(post), method: :delete %></td>
	  </tr>
	<% end %>
</table>

<%= link_to "New Post", new_post_path %>